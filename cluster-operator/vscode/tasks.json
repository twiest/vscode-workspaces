{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build w/ go",
            "type": "shell",
            "command": "GOPATH=${env:HOME}/projects/cluster-operator go install -v github.com/openshift/cluster-operator/cmd/cluster-operator github.com/openshift/cluster-operator/cmd/aws-machine-controller",

            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Build aws-actuator-test",
            "type": "shell",
            "command": "GOPATH=${env:HOME}/projects/cluster-operator go install -v github.com/openshift/cluster-operator/cmd/cluster-operator github.com/openshift/cluster-operator/contrib/cmd/aws-actuator-test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Build w/ make",
            "type": "shell",
            "command": "cd ${env:HOME}/projects/cluster-operator/src/github.com/openshift/cluster-operator ; GOPATH=${env:HOME}/projects/cluster-operator/ make bin/cluster-operator ; RC=$? ; echo RC: $? ; exit $RC",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Run controller-manager",
            "type": "shell",
            "command": "bin/cluster-operator controller-manager --controllers=* --k8s-kubeconfig ~/.kube/config --log-level debug -v 1",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Run make verify (go fmt)",
            "type": "shell",
            "command": "cd ${env:HOME}/projects/cluster-operator/src/github.com/openshift/cluster-operator ; GOPATH=${env:HOME}/projects/cluster-operator/ make verify ; RC=$? ; echo RC: $? ; exit $RC",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Run make test",
            "type": "shell",
            "command": "cd ${env:HOME}/projects/cluster-operator/src/github.com/openshift/cluster-operator ; GOPATH=${env:HOME}/projects/cluster-operator/ make test ; RC=$? ; echo RC: $? ; exit $RC",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Remove code coverage files",
            "type": "shell",
            "command": "rm -f /tmp/go-code-check /tmp/go-code-cover ; RC=$? ; echo RC: $? ; exit $RC",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$go"
        }
    ]
}
